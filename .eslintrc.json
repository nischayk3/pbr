{
    "env": {
        "node": true,
        "commonjs": true,
        "browser": true
    },
    "settings": {
        "react":{
            "version":"autoDetect"
        }
    },
    "extends":  "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
                    },
        "ecmaVersion": 2015,
        "sourceType": "module"
    },   "parser": "babel-eslint",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]    
                 
    }
}
